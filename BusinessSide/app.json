{
  "expo": {
    "name": "BusinessSide",
    "slug": "BusinessSide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to help you find your city automatically when registering your business."
        }
      ],
      "expo-font"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.BusinessSide",
      "infoPlist": {
        "NSContactsUsageDescription": "This app needs access to contacts to help you select customers for appointments."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "READ_CONTACTS"
      ],
      "package": "com.anonymous.BusinessSide"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
